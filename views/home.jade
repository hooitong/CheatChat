doctype html
html
	head
		title CheatChat
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
		script(src="/socket.io/socket.io.js")
		script(src="script.js")
		script(src="modernizr.js")
		script(src="http://maps.google.com/maps/api/js?sensor=false")
	body
		div.container
			header
				h1 CheatChat - NUS Geographical Chat
			input(type="text")#nickInput
			button#nickSet Set Nick
			div#locationStatus
			div#chatNicks
			div#chatEntries
			div#chatControls
				input(type="text")#messageInput
				button#submit Send
			div#roomControl
				button#rmCreate Start
			div#mapholder
			div#errorMsg
			div#buildings
